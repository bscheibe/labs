extends themes

block content
	#wrapper
		.container-fluid
			.row
				.col-md-12
					.frame
						.text M#[span e]r#[span r]y C#[span h]r#[span i]s#[span t]m#[span a]s
						.map-snowflakes
							- var i = 0
							while i < 7
								div(class="snow-row#{i}")
									- var n = 0
									while n < 12
										div(class="snow-#{n}")
											div(class="snow")
										- n++
								-i++
